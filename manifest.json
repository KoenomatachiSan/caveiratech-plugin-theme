{

  "description": "Plugin para alteração da estilização do fórum CaveiraTech.",
  "manifest_version": 2,
  "name": "caveiratech-style-plugin",
  "version": "1.0",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/apply-css",

  "background": {
    "scripts": ["caveiratech-style.js"]
  },

  "page_action": {
    "default_icon": "icons/desactive.png",
    "browser_style": true
  },
  
  "permissions": [
    "activeTab",
    "tabs"
  ]

}
